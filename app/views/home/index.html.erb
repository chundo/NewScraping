
<!-- Content
============================================= -->
<section id="content" class="bgcolor2" style="overflow: visible;">

	<div class="content-wrap nopadding">

		<div class="container clearfix" style="z-index: 7;">
			<div class="heading-block bottommargin-sm noborder dark" style="margin-top: -30px">
				<h3>Series y Peliculas Mas vistas</h3>
				<span>Las mejores series, peliculas y documentales del mundo del cine en una sola parte.</span>
			</div>

			<!-- Carousel
			============================================= -->
			<div id="oc-popular-songs" class="owl-carousel image-carousel carousel-widget" data-margin="20" data-nav="true" data-pagi="false" data-items-xs="2" data-items-sm="3" data-items-md="4" data-items-lg="6" data-items-xl="6">

				<!-- Carousel Items
				============================================= -->
				<% @posts.each do |post|%>
					<div class="oc-item" data-animate="fadeInDown">
						<img src="<%= post.image %>" alt="Image 1" width="200" height="280">
						<div class="overlay">
							<div class="text-overlay">
								<div class="text-overlay-title">
									<h3>
										<%= link_to post.name, video_path(post) %>
									</h3>
								</div>
								<div class="text-overlay-meta">
									<a href="#">The Universe</a>
								</div>
							</div>
							<div class="on-hover">
								<%= link_to video_path(post), class: 'play-icon track-list', 'data-title'=>"Maq Amor", 'data-singer'=>"The Universe" do %>
									<i class="icon-play"></i>
								<% end %>
							</div>
						</div>
					</div>
				<% end %>
			</div>

			<!-- Tabs
			============================================= -->
			<div class="tabs tabs-bb tabs-music-demo customjs tabs-responsive dark topmargin-lg clearfix" id="album-tab" data-accordion-style="accordion-bg">

				<ul class="tab-nav nobottomborder clearfix">
					<li><a href="#tabs-1">Mas poular</a></li>
					<!--<li><a href="#tabs-2">Recommended</a></li>
					<li><a href="#tabs-3">Popular</a></li>
					<li><a href="#tabs-4">Latest</a></li>-->
				</ul>

				<!-- Tabs Container
				============================================= -->
				<div class="tab-container">

					<!-- Tab Content 1
					============================================= -->
					<div class="tab-content clearfix" id="tabs-1">
						<div class="portfolio grid-container portfolio-full portfolio-masonry mixed-masonry music-tabs-albums clearfix">
						
							<% @post_tag.each do |post| %>
								<% if post.id == @post_tag[0].id %>
									<article class="portfolio-item wide">
										<div class="portfolio-image">
											<img src="<%= post.image %>" width="50%" alt="">
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary">Justin Bieber</span>
													<div class="text-overlay-title">
														<h2><a href="#" class="font-secondary">Collections of My Worlds</a></h2>
													</div>
													<a href="#" class="button button-circle button-small t400 ls1 noleftmargin track-list clearfix" data-track="/music/tracks/fallin-extended-mix.mp3" data-poster="/music/tracks/poster-images/fallin-extended-mix.jpg" data-title="Fallin Extended Mix" data-singer="Justin" style="width: auto; display: inline-block; margin-top: 15px"><i class="icon-play"></i>Play Now</a>
													<a href="#" class="button button-circle button-small button-border button-white button-light t400 ls1 clearfix" style="width: auto;display: inline-block; margin-top: 15px">View All</a>
												</div>
												<div class="on-hover">
													<a href="#"><i class="icon-line-heart"></i></a>
													<a href="#" data-toggle="dropdown"><i class="icon-line-ellipsis"></i></a>
													<ul class="dropdown-menu">
														<a class="dropdown-item" href="#"><span class="icon-line-plus"></span> Add to Queue</a>
														<a class="dropdown-item" href="#"><span class="icon-music"></span> Add to Playlist</a>
														<a class="dropdown-item" href="#"><span class="icon-line-cloud-download"></span> Download Offline</a>
														<a class="dropdown-item" href="#"><span class="icon-line-heart"></span> Love</a>
														<div class="dropdown-divider"></div>
														<a class="dropdown-item" href="#"><span class="icon-line-share"></span> Share</a>
													</ul>
												</div>
											</div>
										</div>
									</article>
								<% end %>
								
								<% if post.id + 9 == @post_tag[1].id %>
									<article class="portfolio-item">
										<div class="portfolio-image">
											<a href="#">
												<img src="<%= post.image %>" alt="Locked Steel Gate">
											</a>
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary">Nicki Minaj</span>
													<div class="text-overlay-title">
														<h2><a href="#" class="font-secondary">Pills n Positions</a></h2>
													</div>
												</div>
												<div class="on-hover">
													<a href="#"><i class="icon-line-heart"></i></a>
													<a href="#"><i class="icon-line-ellipsis"></i></a>
												</div>
											</div>
										</div>
									</article>
								<% end %>

								<% if post.id + 9 == @post_tag[2].id %>
									<article class="portfolio-item">
										<div class="portfolio-image">
											<a href="#">
												<img src="<%= post.image %>" alt="Mac Sunglasses">
											</a>
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary">Rihanna</span>
													<div class="text-overlay-title">
														<h2><a href="#" class="font-secondary">Latest Collections of Rihanna</a></h2>
													</div>
												</div>
												<div class="on-hover">
													<a href="#"><i class="icon-line-heart"></i></a>
													<a href="#"><i class="icon-line-ellipsis"></i></a>
												</div>
											</div>
										</div>
									</article>
								<% end %>
								
								<% if post.id == @post_tag[3].id %>
									<article class="portfolio-item wide">
										<div class="portfolio-image">
											<a href="#">
												<img src="<%= post.image %>" alt="">
											</a>
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary">David Guetta</span>
													<div class="text-overlay-title">
														<h2><a href="#" class="font-secondary">Collections of David Guetta</a></h2>
													</div>
													<a href="#" class="button button-circle button-small t400 ls1 noleftmargin track-list clearfix" data-track="/music/tracks/something-about-love.mp3" data-poster="/music/tracks/poster-images/something-about-love.jpg" data-title="Something About Love" data-singer="Sian" style="width: auto;display: inline-block; margin-top: 15px"><i class="icon-play"></i>Play Now</a>
													<a href="#" class="button button-circle button-small button-border button-white button-light t400 ls1 clearfix" style="width: auto;display: inline-block; margin-top: 15px">View All</a>
												</div>
												<div class="on-hover">
													<a href="#"><i class="icon-line-heart"></i></a>
													<a href="#"><i class="icon-line-ellipsis"></i></a>
												</div>
											</div>
										</div>
									</article>
								<% end %>
							<% end %>
						</div>
					</div>

				</div>

			</div>

			<!-- Top Charts
			============================================= -->
			<div class="heading-block bottommargin-sm topmargin noborder dark">
				<h3>Top Charts</h3>
				<span>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</span>
			</div>

			<div id="top-charts" class="portfolio grid-container portfolio-6 dark clearfix">

				<% @posts.each do |post| %>
					<article class="portfolio-item" data-animate="fadeIn" data-delay="700" width="200" height="280">
						<div class="portfolio-image" width="200" height="280">
							<a href="#">
								<img src="<%= post.image %>" alt="" width="200" height="280">
							</a>
							<div class="portfolio-overlay">
								<a href="#" class="left-icon"><i class="icon-line-folder"></i></a>
								<a href="#" class="right-icon"><i class="icon-line-share"></i></a>
							</div>
						</div>
						<div class="portfolio-desc">
							<h3><a href="#"><%= post.name %></a></h3>
							<span><a href="#">Categoria</a></span>
						</div>
					</article>
				<% end %>

			</div>
			
		</div>
		
	</div>

</section><!-- #content end -->