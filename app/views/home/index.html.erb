
<!-- Content
============================================= -->
<section id="content" class="bgcolor2" style="overflow: visible;">

	<div class="content-wrap nopadding">

		<div class="container clearfix" style="z-index: 7;">
			<div class="heading-block bottommargin-sm noborder dark" style="margin-top: -30px">
				<h3>Series y Peliculas Mas vistas</h3>
				<span>Las mejores series, peliculas y documentales del mundo del cine en una sola parte.</span>
			</div>

			<!-- Carousel
			============================================= -->
			<div id="oc-popular-songs" class="owl-carousel image-carousel carousel-widget" data-margin="20" data-nav="true" data-pagi="false" data-items-xs="2" data-items-sm="3" data-items-md="4" data-items-lg="6" data-items-xl="6">

				<!-- Carousel Items
				============================================= -->
				<% @posts_top.each do |post|%>
					<div class="oc-item" data-animate="fadeInDown">
						<img src="<%= post.image %>" alt="Image 1" width="200" height="280">
						<div class="overlay">
							<div class="text-overlay">
								<div class="text-overlay-title">
									<h3>
										<%= link_to post.name, video_path(post) %>
									</h3>
								</div>
								<div class="text-overlay-meta">
									<a href="#"><%= post.created_at >= Time.now - 5.days %></a>
								</div>
							</div>
							<div class="on-hover">
								<%= link_to video_path(post), class: 'play-icon track-list', 'data-title'=>"Maq Amor", 'data-singer'=>"The Universe" do %>
									<i class="icon-play"></i>
								<% end %>
							</div>
						</div>
					</div>
				<% end %>
			</div>

			
			<!-- Tabs
			============================================= -->
			<div class="tabs tabs-bb tabs-music-demo customjs tabs-responsive dark topmargin-lg clearfix" id="album-tab" data-accordion-style="accordion-bg">

				<ul class="tab-nav nobottomborder clearfix">
					<li><a href="#tabs-1">Mas poular</a></li>
					<!--<li><a href="#tabs-2">Recommended</a></li>
					<li><a href="#tabs-3">Popular</a></li>
					<li><a href="#tabs-4">Latest</a></li>-->
				</ul>

				<!-- Tabs Container
				============================================= -->
				<div class="tab-container">

					<!-- Tab Content 1
					============================================= -->
					<div class="tab-content clearfix" id="tabs-1">
						<div class="portfolio grid-container portfolio-full portfolio-masonry mixed-masonry music-tabs-albums clearfix">
						
							<% @post_tag.each do |post| %>
								<% if post.id == @post_tag[0].id %>
									<article class="portfolio-item wide">
										<div class="portfolio-image">
											<!--<img src="<%= post.image %>" style="width: 600px; height: 500px;" alt="">-->
											<img src="<%= post.image %>" style="width: 558px; height: 480px;" alt="<%= post.name %>">
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary"><%= post.sources %></span>
													<div class="text-overlay-title">
														<h2><%= link_to post.name, video_path(post), :class => "font-secondary" %></h2>
													</div>
													
													<%= link_to video_path(post), :class => "button button-circle button-small t400 ls1 noleftmargin track-list clearfix", :style => "width: auto; display: inline-block; margin-top: 15px" do %>
														<i class="icon-play"></i>Play
													<% end %>
													
													<%= link_to videos_i_path(post.name), :class => "button button-circle button-small button-border button-white button-light t400 ls1 clearfix", :style => "width: auto;display: inline-block; margin-top: 15px" do %>
														<i class="icon-play"></i>Ver Todos
													<% end %>
												</div>
												
											</div>
										</div>
									</article>
								<% end %>
								
								<% if post.id == @post_tag[1].id %>
									<article class="portfolio-item">
										<div class="portfolio-image">
											<a href="#">
												<!--http://canvashtml-cdn.semicolonweb.com/demos/music/images/album-artworks/1/2.jpg-->
												<img src="<%= post.image %>" style="width: 273; height: 228px;" alt="<%= post.name %>">
											</a>
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary"><%= post.sources %></span>
													<div class="text-overlay-title">
														<h2><%= link_to post.name, video_path(post), :class => "font-secondary" %></h2>
													</div>
												</div>
												
											</div>
										</div>
									</article>
								<% end %>

								<% if post.id  == @post_tag[2].id %>
									<article class="portfolio-item">
										<div class="portfolio-image">
											<a href="#">
												<!--"http://canvashtml-cdn.semicolonweb.com/demos/music/images/album-artworks/1/3.jpg-->
												<img src="<%= post.image %>" style="width: 273; height: 228px;" alt="<%= post.name %>">
											</a>
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary"><%= post.sources %></span>
													<div class="text-overlay-title">
														<h2><%= link_to post.name, video_path(post), :class => "font-secondary" %></h2>
													</div>
												</div>
												
											</div>
										</div>
									</article>
								<% end %>
								
								<% if post.id == @post_tag[3].id %>
									<article class="portfolio-item wide">
										<div class="portfolio-image">
											<a href="#">
												<!--http://canvashtml-cdn.semicolonweb.com/demos/music/images/album-artworks/1/4.jpg-->
												<img src="<%= post.image %>" style="width: 273; height: 240px;" alt="<%= post.name %>">
											</a>
											<div class="overlay">
												<div class="text-overlay">
													<span class="font-primary"><%= post.sources %></span>
													<div class="text-overlay-title">
														<h2><%= link_to post.name, video_path(post), :class => "font-secondary" %></h2>
													</div>
													<%= link_to video_path(post), :class => "button button-circle button-small t400 ls1 noleftmargin track-list clearfix", :style => "width: auto; display: inline-block; margin-top: 15px" do %>
														<i class="icon-play"></i>Play
													<% end %>
													
													<%= link_to videos_i_path(post.name), :class => "button button-circle button-small button-border button-white button-light t400 ls1 clearfix", :style => "width: auto;display: inline-block; margin-top: 15px" do %>
														<i class="icon-play"></i>Ver Todos
													<% end %>
												</div>
											</div>
										</div>
									</article>
								<% end %>
							<% end %>
						</div>
					</div>

				</div>

			</div>


			<!-- Top Charts
			============================================= -->
			<div class="heading-block bottommargin-sm topmargin noborder dark">
				<h3>Todo en un solo sitio</h3>
				<span>Ultimas series y peliculas publicadas en un solo sitio. capitulos y temporadasas.</span>
			</div>

			<div id="top-charts" class="portfolio grid-container portfolio-6 dark clearfix">

				<% @posts.each do |post| %>
					<article class="portfolio-item" data-animate="fadeIn" data-delay="700" width="200" height="280">
						<div class="portfolio-image" width="200" height="280">
							<a href="#">
								<img src="<%= post.image %>" alt="" style="width: 173px; height: 240px;" >
								<!--style="width: 173; height: 240;"-->
							</a>
							<div class="portfolio-overlay">
								<!--
									<a href="#" class="left-icon"><i class="icon-line-folder"></i></a>
									<a href="#" class="right-icon"><i class="icon-line-share"></i></a>
								-->
								<%= link_to video_path(post), class: 'play-icon track-list center-icon', 'data-title'=>"Maq Amor", 'data-singer'=>"The Universe" do %>
									<i class="icon-play"></i>
								<% end %>

								<%= post.name %>
							
							</div>
						</div>
						<div class="portfolio-desc">
							<h3><%= link_to post.name.truncate(22), video_path(post) %></h3>
							<!--<span><a href="#">Categoria</a></span>-->
						</div>
					</article>
				<% end %>

			</div>


			
		</div>
		
	</div>

</section><!-- #content end -->